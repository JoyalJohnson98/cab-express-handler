<div class="text">
    <h1 class="text-center" style="text-align: center;">Cab Details!</h1>
</div>

<div class="container">
    <a href="/cab" class="btn btn-primary">+Add Cab  Details! </a>
    <table class="table table-striped mt-4" style="color:rgb(217, 226, 230) ;">
        <tr style="color:rgb(244, 11, 11) ;">
            <th>Id</th>
            <th>CabName</th>
            <th>CabColor</th>
            <th>CabPlateNo</th>
            <th>CabSize</th>
            
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.name}}</td>
            <td>{{this.dataValues.color}}</td>
            <td>{{this.dataValues.cabplateno}}</td>
            <td>{{this.dataValues.cabsize}}</td>
            
            <td>
                <a href="/cabUpdate/{{this.dataValues.id}}">Edit</a> |
                <a href="/cabDelete/{{this.dataValues.id}}" class="text-danger"
                    onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
    <p class="text-end" style="color:rgb(217, 226, 230) ;">You are logged in as:
        <b>{{identity.name}} {{identity.color}}</b>
    </p>
</div>